@page
@model WebApplication1.Pages.BookList.IndexModel


<br/>
<div class="container row p-0 m-0"><!--Padding =>0 margin =>0 -->
    <div class=" col-9">
        <h2 class="text-info">Book List</h2><!--Bootstrap class for text -->
    </div>
    <div class="col-3">
        <a  asp-page="Create" class="btn btn-info form-control text-white">Create New Book</a><!-- Boottrap class for button -->
    </div>
    <div class="col-12 border p-3 mt-3"><!--Padding =>3 margin =>3 -->
    <form method="post">
        @if(Model.Books.Count()>0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        <label asp-for="Books.FirstOrDefault().Name"></label>
                    </th>
                    <th>
                        @* @Html.DisplayNameFor(m=>m.Books.FirstOrDefault().Author*@
                        <label asp-for="Books.FirstOrDefault().Author"></label>
                    </th>
                    <th>
                        <label asp-for="Books.FirstOrDefault().ISBN"></label>
                    </th>
                    <th>

                    </th>
                    @foreach (var items in Model.Books)
                    {
                <tr>
                    <td>
                        @Html.DisplayFor(m => items.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(m => items.Author)
                    </td>
                    <td>
                        @Html.DisplayFor(m => items.ISBN)
                    </td>
                    <td>
                        <button asp-page-handler="Delete" asp-route-ID="@items.Id" onclick="return confirm('Are you sure you want to delete')" class="btn btn-danger btn-sm text-white">Delete</button>
                        <a asp-page="Edit" asp-route-id="@items.Id" class="btn btn-success btn-sm text-white">Edit</a>
                    </td>
                </tr>
                    }
            </table>
        }
        else
        {
            <p>No book avaliable</p>
        }
    </form>
    </div>
</div>
